<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="pojo.Link" table="link">
        <id name="id" column="id" type="int">
            <generator class="increment"/>
        </id>
        <property name="websitename" column="websitename" type="string" length="50" not-null="true"/>
        <property name="websiteurl" column="websiteurl" type="string" length="100" not-null="true"/>
        <property name="visits" column="visits" type="int"  not-null="true" />
    </class>
</hibernate-mapping>