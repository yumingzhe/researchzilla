<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="pojo.UserEntity" table="researchzilla_userentity">

        <id name="uid" column="uid" type="int">
            <generator class="foreign">
                <param name="property">siteUser</param>
            </generator>
        </id>


        <property name="age" column="age" type="int"/>
        <property name="birthday" column="birthday" type="java.util.Date"/>
        <property name="country" column="country" type="java.lang.String" length="15"/>
        <property name="description" column="description" type="text" length="150"/>
        <property name="portrait" column="portrait" type="blob"/>
        <property name="gender" column="gender" type="char"/>
        <property name="realName" column="realName" type="java.lang.String" length="20"/>
        <property name="personalWebsite" column="personalWebsite" length="50" type="java.lang.String"/>
        <property name="mobilePhone" column="mobilePhone" type="long"/>
        <property name="qq" column="qq" type="long"/>
        <property name="registerDate" column="registerDate" type="timestamp"/>
        <property name="groupId" column="groupId" type="int"/>
        <property name="userType" column="userType" type="int"/>
        <property name="lastActionId" column="lastActionId" type="long"/>
        <!--<many-to-one name="siteUser" class="pojo.SiteUser" foreign-key="uid" unique="true"/>-->
    </class>
</hibernate-mapping>